<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".HomeAdmin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADMINISTRACIÓN DE AUTOMOVILES"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Codigo" />

        <EditText
            android:id="@+id/eTIdAuto"
            android:layout_width="122dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="numberSigned" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Modelo" />

                <EditText
                    android:id="@+id/eTModelo"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Año" />

                <EditText
                    android:id="@+id/eTAño"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° de vin" />

                <EditText
                    android:id="@+id/etNumeroVin"
                    android:layout_width="165dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="text"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° de chasis"

                    />

                <EditText
                    android:id="@+id/etNumeroChasis"
                    android:layout_width="165dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° motor" />

                <EditText
                    android:id="@+id/etNumeroMotor"
                    android:layout_width="250dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Asientos" />

                <EditText
                    android:id="@+id/etNumeroAsientos"
                    android:layout_width="80dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="number"
                    android:singleLine="true" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacidad asientos" />

                <EditText
                    android:id="@+id/etCapacidadAsientos"
                    android:layout_width="165dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"

                    />

                <EditText
                    android:id="@+id/etPrecio"
                    android:layout_width="165dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="numberSigned" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imagen URL" />

                <EditText
                    android:id="@+id/etURLImagen"
                    android:layout_width="165dp"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:inputType="text"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción"

                    />

                <EditText
                    android:id="@+id/etDescripcion"
                    android:layout_width="165dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="text" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Colores"

                    />

                <Spinner
                    android:id="@+id/cmbColores"
                    android:layout_width="165dp"
                    android:layout_height="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Marcas"

                    />

                <Spinner
                    android:id="@+id/cmbMarcas"
                    android:layout_width="165dp"
                    android:layout_height="50dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo Automovil"

            />

        <Spinner
            android:id="@+id/cmbTipoAuto"
            android:layout_width="330dp"
            android:layout_height="50dp" />

        <TextView
            android:id="@+id/txtIdDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAgregar"
                android:layout_width="165dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:text="Agregar" />

            <Button
                android:id="@+id/btnActualizar"
                android:layout_width="165dp"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:text="Actualizar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnEliminar"
                android:layout_width="165dp"
                android:layout_marginHorizontal="4dp"
                android:layout_height="48dp"
                android:text="Eliminar" />

            <Button
                android:id="@+id/btnBuscar"
                android:layout_width="165dp"
                android:layout_marginHorizontal="4dp"
                android:layout_height="48dp"
                android:text="Buscar" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>